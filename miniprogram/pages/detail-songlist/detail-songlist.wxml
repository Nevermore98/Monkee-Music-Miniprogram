<!-- pages/detail-songlist/detail-songlist.wxml -->
<view>
  <songlist-header songListInfo="{{songListInfo}}" type="{{type}}" />
  <!-- <image class="image" style="height:{{type==='ranking'?'400rpx':'800rpx'}}" src="{{songListInfo.coverImgUrl}}" mode="aspectFill" /> -->
  <!-- <view class="title">{{songListInfo.name}}</view>
  <view class="title">{{songListInfo.description}}</view> -->
  <view class="play-all" wx:if="{{songListTracks.length || songListInfo.tracks.length}}">
    <view class="icomoon icon-Fa6SolidCirclePlay"></view>
    <text class="play-all-text">播放全部</text>
    <text class="total-number">({{songListTracks.length || songListInfo.tracks.length }})</text>
  </view>
  <view class="song-list">
    <!-- getSonglistDetail 的 tracks：如果是歌单则只有 20 条数据，排行榜数据为全部 -->
    <block wx:for="{{type === 'ranking' ? songListInfo.tracks : songListTracks}}" wx:key="id">
      <song-item-v2 bindtap="onSongItemTap" itemData="{{item}}" data-index="{{index}}" index="{{index+1}}" />
    </block>
  </view>
</view>
<player-bar paddingBottom="env(safe-area-inset-bottom)" />
